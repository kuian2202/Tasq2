    <resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
        <style name="Theme.Tasq" parent="Theme.MaterialComponents.Light">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/tbg</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/tblue</item>
            <item name="colorSecondaryVariant">@color/tblue</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor">@color/tbg</item>
            <!-- Customize your theme here. -->
        </style>

        <!--Light mode-->
        <!--Screen background if light mode-->
        <style name="SCREEN">
            <item name="android:background">@color/tbg</item>
        </style>

        <!--Texts background if light mode on-->
        <style name="TEXT">
            <item name="android:textColor">@color/tblue</item>
            <item name="android:textColorHint">@color/tblue</item>
        </style>
        <style name="TEXTNEWTASK">
            <item name="android:textColor">@color/tblue</item>
            <item name="android:textColorHint">@color/tblue</item>
        </style>
        <style name="TEXTSETTINGS">
            <item name="android:textColor">@color/tblue</item>
            <item name="android:textColorHint">@color/tblue</item>
        </style>
        <style name="PROFILETEXT">
            <item name="android:textColor">@color/white</item>
        </style>
        <!--button background if light mode on-->
        <style name="BUTTON">
            <item name="android:background">@color/tblue</item>
            <item name="android:textColor">@color/white</item>
        </style>
        <style name="BUTTONNEWTASK">
            <item name="android:textColor">@color/tblue</item>
        </style>
        <style name="IMAGEVIEW">
            <item name="background">@color/tbg</item>
        </style>
        <color name="PROFILECOLOR">@color/tblue</color>
        <color name="PROFILEIMAGEBG">#EBBAAA</color>
        <style name="DatePickerStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
            <!-- Customize the colors for the date picker -->
            <item name="colorPrimary">@color/white</item>
            <item name="colorOnPrimary">@color/white</item>
        </style>

        <style name="TimePickerStyle" parent="ThemeOverlay.MaterialComponents.Dialog">
            <!-- Customize the colors for the time picker -->
            <item name="colorPrimary">@color/white</item>
            <item name="colorOnPrimary">@color/white</item>
        </style>
        <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
            <item name="android:windowIsFloating">false</item>
            <item name="background">@color/white</item>
            <item name="itemIconTint">@color/tblue</item>
            <item name="android:statusBarColor">@color/transparent</item>
            <item name="android:windowSoftInputMode">adjustResize</item>

        </style>
    </resources>