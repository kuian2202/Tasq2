<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tasq" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tblue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tblue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/tblue</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Light mode-->
    <!--Screen background if light mode-->
    <style name="SCREEN">
        <item name="android:background">@color/tblue</item>
    </style>

    <!--Texts background if light mode on-->
    <style name="TEXT">
        <item name="android:textColor">@color/tbg</item>
        <item name="android:textColorHint">@color/tblue</item>
    </style>

    <style name="TEXTNEWTASK">
        <item name="android:textColor">@color/tbg</item>
        <item name="android:textColorHint">@color/tbg</item>
    </style>

    <style name="TEXTSETTINGS">
        <item name="android:textColor">@color/tblue</item>
        <item name="android:textColorHint">@color/tblue</item>
    </style>

    <style name="PROFILETEXT">
        <item name="android:textColor">@color/tblue</item>
    </style>

    <!--button background if light mode on-->
    <style name="BUTTON">
        <item name="android:background">@color/tbg</item>
        <item name="android:textColor">@color/tblue</item>
    </style>
    <style name="BUTTONALARM">
        <item name="android:backgroundTint">@color/tbg</item>
        <item name="android:textColor">@color/tblue</item>
    </style>

    <style name="BUTTONNEWTASK">
        <item name="android:textColor">@color/tbg</item>
    </style>

    <style name="IMAGEVIEW">
        <item name="background">@color/tbg</item>
    </style>

    <color name="PROFILECOLOR">@color/tbg</color>
    <color name="PROFILEIMAGEBG">@color/torange</color>
    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="background">@color/tblue</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>
</resources>